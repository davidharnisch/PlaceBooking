@using PlaceBooking.Application.DTOs
@model LoginDto
@{
    ViewData["Title"] = "Pøihlášení";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header pb-card-header text-white text-center">
                <h4><i class="bi bi-person-circle"></i> Pøihlášení</h4>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" id="Password" />
                            <button type="button" class="btn btn-outline-secondary btn-toggle-password" data-target="Password" aria-label="Zobrazit/skrýt heslo">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-cta">Pøihlásit se</button>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-action="Register">Nemáte úèet? Zaregistrujte se.</a>
                    </div>
                </form>
                
                <hr/>
                <div class="text-muted small text-center">
                    Demo uživatel (heslo: <strong>heslo123</strong>):<br/>
                    jan.novak@test.com
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
