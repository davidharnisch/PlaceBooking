@using PlaceBooking.Application.DTOs
@model IEnumerable<BookingDto>

@{
    ViewData["Title"] = "Moje Historie";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Moje Historie Rezervací</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">Zpìt na pøehled</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-journal-x pb-tile-icon" style="font-size: 2rem;"></i>
                <p class="mt-2">Nemáte zatím žádné rezervace.</p>
                <a asp-action="Room" class="btn btn-primary btn-sm">Zabookovat místo</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Datum</th>
                            <th>Místnost</th>
                            <th>Místo</th>
                            <th>Vytvoøeno</th>
                            <th>Akce</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Check if cancellation is allowed (Today or Future)
                            bool canCancel = item.Date >= DateOnly.FromDateTime(DateTime.UtcNow);
                            string rowClass = !canCancel ? "text-muted" : "";

                            <tr class="@rowClass">
                                <td>
                                    <strong>@item.Date.ToString("dd.MM.yyyy")</strong>
                                    <br/>
                                    <small class="text-muted">@item.Date.DayOfWeek</small>
                                </td>
                                <td>@item.RoomName</td>
                                <td>
                                    <span class="badge pb-badge">@item.SeatLabel</span>
                                </td>
                                <td>@item.CreatedAt.ToString("g")</td>
                                <td>
                                    @if (canCancel)
                                    {
                                        <form asp-action="Cancel" method="post" onsubmit="return confirm('Opravdu zrušit rezervaci?');">
                                            <input type="hidden" name="bookingId" value="@item.Id" />
                                            <!-- Note: We don't send 'date' here, so Controller knows to redirect back to History -->
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Zrušit
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted"><i class="bi bi-check-circle"></i> Probìhlo</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
