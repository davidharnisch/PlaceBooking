@using PlaceBooking.Application.DTOs
@model RoomDto

@{
    var isReadOnly = ViewBag.IsReadOnly as bool? ?? false;
    var composedTitle = isReadOnly ? "Historie | " + Model.Name : "Zabookovat | " + Model.Name;
    ViewBag.Title = composedTitle;
    ViewData["Title"] = composedTitle;

    var currentUserId = ViewBag.CurrentUserId as int? ?? 0;
    var selectedDate = ViewBag.SelectedDate as string;
    var selectedDateRaw = selectedDate ?? DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd");
    var selectedDateOnly = DateOnly.Parse(selectedDateRaw);
    var selectedDateDisplay = selectedDateOnly.ToString("dd.MM.yyyy");
    var isSelectedDateNotInPast = selectedDateOnly >= DateOnly.FromDateTime(DateTime.Today);
    var prevDate = selectedDateOnly.AddDays(-1).ToString("yyyy-MM-dd");
    var nextDate = selectedDateOnly.AddDays(1).ToString("yyyy-MM-dd");

    var dateNavigateAction = isReadOnly ? "Occupancy" : "Room";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@(ViewBag.Title ?? Model.Name)</h2>
    
    <!-- Date Picker Form -->
    <div class="d-flex gap-2 align-items-center">
        <a class="btn btn-outline-primary" asp-action="@dateNavigateAction" asp-route-roomId="@Model.Id" asp-route-date="@prevDate" aria-label="Pøedchozí den" title="Pøedchozí den">
            <i class="bi bi-chevron-left" aria-hidden="true"></i>
        </a>

        <form method="get" asp-action="@dateNavigateAction" class="d-flex gap-2 room-date-form">
            <input type="hidden" name="roomId" value="@Model.Id" />
            <input type="date" name="date" class="form-control room-date-input" value="@selectedDateRaw" />
        </form>

        <a class="btn btn-outline-primary" asp-action="@dateNavigateAction" asp-route-roomId="@Model.Id" asp-route-date="@nextDate" aria-label="Další den" title="Další den">
            <i class="bi bi-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">Zpìt na pøehled</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Legend -->
<div class="mb-3">
    <span class="badge bg-success me-2">Volno</span>
    <span class="badge bg-danger me-2">Obsazeno (Cizí)</span>
    <span class="badge btn-primary me-2">Moje rezervace</span>
</div>

<!-- Map Grid (Simulation) -->
<div class="card p-4 bg-light">
    <div class="d-flex flex-wrap gap-3 justify-content-center">
        @foreach (var seat in Model.Seats)
        {
            var isMyBooking = seat.IsBooked && seat.BookedByUserId == currentUserId;
            var bookedAtLocal = seat.BookedAt?.ToLocalTime();

            var tooltip = "Volno";
            if (seat.IsBooked)
            {
                tooltip = isMyBooking
                    ? $"Moje rezervace | Vytvoøeno: {bookedAtLocal:dd.MM.yyyy HH:mm}"
                    : $"Obsazeno: {seat.BookedBy} | Vytvoøeno: {bookedAtLocal:dd.MM.yyyy HH:mm}";
            }

            var isPastDate = selectedDateOnly < DateOnly.FromDateTime(DateTime.Today);
            var canCreateBooking = !isReadOnly && !isPastDate;
            var canCancelBooking = !isReadOnly && isSelectedDateNotInPast;

            var btnClass = !seat.IsBooked
                ? "btn-outline-success"
                : isMyBooking
                    ? "btn-primary"
                    : "btn-danger";

            <div class="position-relative" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="@tooltip">
                @if (isReadOnly)
                {
                    <button class="btn @btnClass p-2" 
                            style="width: 80px; height: 80px; overflow:hidden; cursor: default;" disabled>
                        <span class="fw-bold">@seat.Label</span>
                        <br/>
                        @if(seat.IsBooked) {
                            <small style="font-size:0.65rem; display:block; line-height:1.1; margin-top:2px;">@seat.BookedBy</small>
                        } else {
                             <small class="text-muted">Volno</small>
                        }
                    </button>
                }
                else if (!seat.IsBooked)
                {
                    <button type="button" class="btn @btnClass p-3" style="width: 80px; height: 80px;" 
                            data-bs-toggle="modal" data-bs-target="#confirmModal-@seat.Id" disabled="@(!canCreateBooking)">
                        @seat.Label
                        <br/><small>Volno</small>
                    </button>
                    
                    @if (canCreateBooking)
                    {
                        <div class="modal fade" id="confirmModal-@seat.Id" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Potvrzení rezervace</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Opravdu chcete zabookovat místo <strong>@seat.Label</strong> na den @selectedDateDisplay?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zrušit</button>
                                        <form asp-action="Create" method="post">
                                            <input type="hidden" name="SeatId" value="@seat.Id" />
                                            <input type="hidden" name="Date" value="@selectedDate" />
                                            <button type="submit" class="btn btn-primary">Ano, zabookovat</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    @if (isMyBooking && canCancelBooking && seat.BookingId != null)
                    {
                        <button type="button" class="btn @btnClass p-3" style="width: 80px; height: 80px;" 
                                data-bs-toggle="modal" data-bs-target="#cancelModal-@seat.Id">
                            @seat.Label
                            <br/><small>Moje</small>
                        </button>

                        <div class="modal fade" id="cancelModal-@seat.Id" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Zrušit rezervaci</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Opravdu chcete zrušit svou rezervaci místa <strong>@seat.Label</strong> pro den @selectedDateDisplay?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zavøít</button>
                                        <form asp-action="Cancel" method="post">
                                            <input type="hidden" name="bookingId" value="@seat.BookingId" />
                                            <input type="hidden" name="date" value="@selectedDateRaw" />
                                            <button type="submit" class="btn btn-danger">Ano, zrušit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <button class="btn @btnClass p-3" style="width: 80px; height: 80px; cursor: not-allowed;" disabled>
                            @seat.Label
                            <br/><i class="bi bi-person-fill"></i>
                        </button>
                    }
                }
            </div>
        }
    </div>
</div>
