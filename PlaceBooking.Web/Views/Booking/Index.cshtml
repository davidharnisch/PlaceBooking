@{
    ViewData["Title"] = "Rezervaèní systém";
}

<div class="text-center mb-5">
    <h1 class="display-4">Vítejte v Booking Systému</h1>
    <p class="lead">Vyberte si akci</p>
</div>

<div class="row">
<!-- Tile 1: Book a place -->
<div class="col-md-6 mb-4">
        <a asp-controller="Booking" asp-action="Room" class="pb-tile-link">
            <div class="card h-100 shadow-sm pb-tile">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-plus pb-tile-icon"></i>
                    <h3 class="card-title mt-3">Zabookovat místo</h3>
                    <p class="card-text">Vyberte si volné místo na mapì 7. patra.</p>
                    <span class="btn btn-primary">Pøejít na mapu</span>
                </div>
            </div>
        </a>
    </div>

    <!-- Tile 2: My History -->
    <div class="col-md-6 mb-4">
        <a asp-controller="Booking" asp-action="History" class="pb-tile-link">
            <div class="card h-100 shadow-sm pb-tile">
                <div class="card-body text-center">
                    <i class="bi bi-clock-history pb-tile-icon"></i>
                    <h3 class="card-title mt-3">Moje Historie</h3>
                    <p class="card-text">Pøehled mých rezervací a možnost storna.</p>
                    <span class="btn btn-success">Zobrazit historii</span>
                </div>
            </div>
        </a>
    </div>

    <!-- Tile 3: Occupancy -->
    <div class="col-md-6 mb-4">
        <a asp-controller="Booking" asp-action="Occupancy" class="pb-tile-link">
            <div class="card h-100 shadow-sm pb-tile">
                <div class="card-body text-center">
                    <i class="bi bi-people pb-tile-icon"></i>
                    <h3 class="card-title mt-3">Obsazenost</h3>
                    <p class="card-text">Pøehled kdo kde sedí v daný den.</p>
                    <span class="btn btn-warning">Zobrazit obsazenost</span>
                </div>
            </div>
        </a>
    </div>
    
    <!-- Tile 4: Stats -->
     <div class="col-md-6 mb-4">
        <a asp-controller="Booking" asp-action="Stats" class="pb-tile-link">
            <div class="card h-100 shadow-sm pb-tile">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-line pb-tile-icon"></i>
                    <h3 class="card-title mt-3">Vytíženost</h3>
                    <p class="card-text">Statistiky využití míst za období.</p>
                    <span class="btn btn-primary">Zobrazit statistiky</span>
                </div>
            </div>
        </a>
    </div>
</div>
