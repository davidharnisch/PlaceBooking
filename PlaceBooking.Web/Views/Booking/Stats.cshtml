@using PlaceBooking.Application.DTOs
@model IEnumerable<SeatStatisticsDto>

@{
    ViewData["Title"] = "Statistiky Vytíženosti";
    var fromDate = ViewBag.FromDate as string;
    var toDate = ViewBag.ToDate as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Vytíženost Míst</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">Zpìt na pøehled</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body bg-light">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Od</label>
                <input type="date" name="from" class="form-control" value="@fromDate" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Do</label>
                <input type="date" name="to" class="form-control" value="@toDate" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary btn-cta w-100">
                    <i class="bi bi-filter"></i> Zobrazit
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">Na zvolené období nejsou žádná data.</div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Místnost</th>
                        <th>Sedadlo</th>
                        <th class="text-end">Poèet dnù obsazení</th>
                        <th style="width: 30%;">Využití (Graf)</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        // Calculate max for progress bar
                        int maxCount = Model.Max(x => x.BookingsCount);
                        if (maxCount == 0) maxCount = 1; 
                    }
                    @foreach (var item in Model)
                    {
                        int percent = (int)((double)item.BookingsCount / maxCount * 100);
                        <tr>
                            <td>@item.RoomName</td>
                            <td><span class="badge pb-badge">@item.SeatLabel</span></td>
                            <td class="text-end fw-bold">@item.BookingsCount</td>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar pb-progress" style="width: @percent%"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
